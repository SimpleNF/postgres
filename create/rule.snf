# https://www.postgresql.org/docs/17/sql-createrule.html

CREATE [ OR REPLACE ] RULE name AS 
    ON { SELECT | UPDATE | INSERT | DELETE }
    TO table
    [ WHERE condition_expression ]
    DO [ ALSO | INSTEAD ] { NOTHING | ( rule_statement [; ...] ) }

# STATEMEMT rule_statement
SELECT
INSERT
UPDATE
DELETE
NOTIFY

# RETURN condition_expression
BOOLEAN