# https://www.postgresql.org/docs/17/sql-createcast.html

CREATE CAST ( source AS target )
    WITH FUNCTION function [ ( argtype [, ... ] ) ]
    [ AS { ASSIGNMENT | IMPLICIT } ]

CREATE CAST ( source AS target )
    WITHOUT FUNCTION
    [ AS { ASSIGNMENT | IMPLICIT } ]

CREATE CAST ( source AS target )
    WITH INOUT
    [ AS { ASSIGNMENT | IMPLICIT } ]