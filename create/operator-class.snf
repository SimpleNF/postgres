# https://www.postgresql.org/docs/17/sql-createopclass.html

CREATE OPERATOR CLASS name [ DEFAULT ] 
    FOR TYPE type USING using [ FAMILY family ] AS
    {
        OPERATOR operator_number operator [ ( left, right ) ] [ FOR SEARCH | FOR ORDER BY order ] |
        FUNCTION function_number [ ( left [, right ] ) ] function ( argtype [, ...] ) |
        STORAGE storage
    } [, ... ]