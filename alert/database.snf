# https://www.postgresql.org/docs/17/sql-alterdatabase.html

ALTER DATABASE name [ [ WITH ] action ]

ALTER DATABASE name REFRESH COLLATION VERSION

ALTER DATABASE name SET config_parameter FROM CURRENT

ALTER DATABASE name SET config_parameter { TO | = } { value | DEFAULT }

ALTER DATABASE name RESET config_parameter

ALTER DATABASE name RESET ALL

ALTER DATABASE name RENAME TO new_name

ALTER DATABASE name OWNER TO role

ALTER DATABASE name SET TABLESPACE tablespace

# WHERE action
[ ALLOW_CONNECTIONS allowconn ]
[ CONNECTION LIMIT connlimit ]
[ IS_TEMPLATE istemplate ]

# WHERE role
name | CURRENT_ROLE | CURRENT_USER | SESSION_USER